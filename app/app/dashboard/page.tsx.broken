"use client";
import { useState, useEffect } from "react";
import { useRouter } from "next/navigation";
import { 
  Upload, 
  RefreshCw, 
  CheckCircle, 
  XCircle, 
  AlertCircle, 
  MessageSquare,
  Database,
  Search,
  Brain,
  ArrowLeft,
  Trash2,
  FileText
} from "lucide-react";
import { checkHealthStatus, uploadPDF, getIngestionStatus, listAllDocuments, deleteDocument } from "@/lib/api";
import LoadingWrapper from "@/components/LoadingWrapper";

type ServiceStatus = "online" | "offline" | "degraded" | "checking";

interface HealthStatus {
  naga_ai: ServiceStatus;
  cohere: ServiceStatus;
  postgresql: ServiceStatus;
  opensearch: ServiceStatus;
}

interface IngestionJob {
  job_id: string;
  filename: string;
  status: "pending" | "processing" | "completed" | "failed";
  progress: number;
  message: string;
  project_id?: string;
}

interface Document {
  doc_id: string;
  title: string;
  project_id: string;
  doc_type: string;
  created_at: string;
  page_count: number;
  visual_count: number;
  table_count: number;
  chunk_count: number;
}

export default function DashboardPage() {
  const router = useRouter();
  const [health, setHealth] = useState<HealthStatus | null>(null);
  const [refreshing, setRefreshing] = useState(false);
  const [uploadFile, setUploadFile] = useState<File | null>(null);
  const [projectId, setProjectId] = useState("windsor_1032_california");
  const [uploading, setUploading] = useState(false);
  const [activeJobs, setActiveJobs] = useState<IngestionJob[]>([]);
  const [documents, setDocuments] = useState<Document[]>([]);
  const [loadingDocuments, setLoadingDocuments] = useState(true);

  // Load active jobs from localStorage on mount
  useEffect(() => {
    const stored = localStorage.getItem("activeIngestionJobs");
    if (stored) {
      try {
        const jobs = JSON.parse(stored);
        // Only restore jobs from last 24 hours to avoid stale data
        const recentJobs = jobs.filter((job: IngestionJob) => {
          // If job has no timestamp, keep it for backwards compatibility
          return true;
        });
        setActiveJobs(recentJobs);
      } catch (error) {
        console.error("Failed to load stored jobs:", error);
      }
    }
  }, []);

  // Save active jobs to localStorage whenever they change
  useEffect(() => {
    try {
      if (activeJobs.length > 0) {
        localStorage.setItem("activeIngestionJobs", JSON.stringify(activeJobs));
      } else {
        localStorage.removeItem("activeIngestionJobs");
      }
    } catch (error) {
      console.error("Failed to save jobs to localStorage:", error);
      // Continue without localStorage - not critical
    }
  }, [activeJobs]);

  // Load health status and documents on mount
  useEffect(() => {
    loadHealthStatus();
    loadDocuments();
    // Poll for job status every 500ms if there are active jobs (faster for better UX)
    const interval = setInterval(() => {
      if (activeJobs.length > 0) {
        checkActiveJobs();
      }
    }, 500);
    return () => clearInterval(interval);
  }, [activeJobs.length]);

  async function loadHealthStatus() {
    setRefreshing(true);
    try {
      const data = await checkHealthStatus();
      setHealth(data);
    } catch (error) {
      console.error("Failed to load health status:", error);
    } finally {
      setRefreshing(false);
    }
  }

  async function loadDocuments() {
    setLoadingDocuments(true);
    try {
      const data = await listAllDocuments();
      setDocuments(data.documents || []);
    } catch (error) {
      console.error("Failed to load documents:", error);
    } finally {
      setLoadingDocuments(false);
    }
  }

  async function handleDeleteDocument(docId: string, title: string) {
    if (!confirm(`Are you sure you want to delete "${title}"? This action cannot be undone.`)) {
      return;
    }

    try {
      await deleteDocument(docId);
      alert(`Successfully deleted "${title}"`);
      // Reload documents list
      loadDocuments();
    } catch (error) {
      console.error("Failed to delete document:", error);
      alert(`Failed to delete "${title}". Check console for details.`);
    }
  }

  async function checkActiveJobs() {
    const updatedJobs = await Promise.all(
      activeJobs.map(async (job) => {
        if (job.status === "completed" || job.status === "failed") {
          return job; // Don't re-check completed/failed jobs
        }
        try {
          const status = await getIngestionStatus(job.job_id);
          return {
            job_id: job.job_id,
            filename: status.filename,
            status: status.status,
            progress: status.progress,
            message: status.message,
            project_id: status.project_id,
          };
        } catch (error) {
          return job;
        }
      })
    );
    setActiveJobs(updatedJobs);
    
    // Reload documents list when all jobs are complete (to show new documents)
    const allComplete = updatedJobs.every(job => job.status === "completed" || job.status === "failed");
    if (allComplete && updatedJobs.length > 0) {
      loadDocuments();
    }
  }

  function clearCompletedJobs() {
    setActiveJobs(prev => prev.filter(job => job.status !== "completed" && job.status !== "failed"));
  }

  async function handleUpload() {
    if (!uploadFile) return;

    setUploading(true);
    try {
      const formData = new FormData();
      formData.append("file", uploadFile);
      formData.append("project_id", projectId);
      formData.append("doc_type", "permit");

      const response = await uploadPDF(formData);

      // Add job to tracking
      setActiveJobs((prev) => [
        ...prev,
        {
          job_id: response.job_id,
          filename: response.filename,
          status: "pending",
          progress: 0,
          message: "Starting ingestion...",
          project_id: response.project_id,
        },
      ]);

      // Clear file input
      setUploadFile(null);
    } catch (error) {
      console.error("Upload failed:", error);
      alert("Upload failed. Check console for details.");
    } finally {
      setUploading(false);
    }
  }

  function getStatusIcon(status: ServiceStatus) {
    switch (status) {
      case "online":
        return <CheckCircle className="w-5 h-5 text-green-500" />;
      case "offline":
        return <XCircle className="w-5 h-5 text-red-500" />;
      case "degraded":
        return <AlertCircle className="w-5 h-5 text-yellow-500" />;
      default:
        return <RefreshCw className="w-5 h-5 text-gray-400 animate-spin" />;
    }
  }

  function getServiceLabel(service: string) {
    const labels: Record<string, { name: string; icon: any }> = {
      naga_ai: { name: "Naga AI (LLM & Embeddings)", icon: Brain },
      cohere: { name: "Cohere (Reranker)", icon: Search },
      postgresql: { name: "PostgreSQL (Database)", icon: Database },
      opensearch: { name: "OpenSearch (Search Engine)", icon: Search },
    };
    return labels[service] || { name: service, icon: AlertCircle };
  }

  return (
    <LoadingWrapper>
      <div className="min-h-screen bg-gray-50">
        {/* Header */}
        <div className="bg-white border-b">
          <div className="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
            <div className="flex items-center gap-4">
              <button
                onClick={() => router.push("/chat")}
                className="flex items-center gap-2 px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 rounded-lg transition"
              >
                <ArrowLeft className="w-4 h-4" />
                Back to Chat
              </button>
              <h1 className="text-2xl font-bold text-gray-900">Dashboard</h1>
            </div>
            <button
              onClick={loadHealthStatus}
              disabled={refreshing}
              className="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 disabled:opacity-50 transition"
            >
              <RefreshCw className={`w-4 h-4 ${refreshing ? "animate-spin" : ""}`} />
              Refresh Status
            </button>
          </div>
        </div>

        <div className="max-w-7xl mx-auto px-6 py-8">
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {/* API Status Panel */}
            <div className="bg-white rounded-lg shadow p-6">
              <h2 className="text-xl font-semibold mb-4 flex items-center gap-2">
                <Database className="w-5 h-5" />
                API Status
              </h2>
              {health ? (
                <div className="space-y-3">
                  {Object.entries(health).map(([service, status]) => {
                    if (service.endsWith("_error")) return null;
                    const { name, icon: Icon } = getServiceLabel(service);
                    return (
                      <div
                        key={service}
                        className="flex items-center justify-between p-3 bg-gray-50 rounded-lg"
                      >
                        <div className="flex items-center gap-3">
                          <Icon className="w-5 h-5 text-gray-600" />
                          <span className="font-medium text-gray-700">{name}</span>
                        </div>
                        <div className="flex items-center gap-2">
                          {getStatusIcon(status as ServiceStatus)}
                          <span className="text-sm font-medium capitalize">{status}</span>
                        </div>
                      </div>
                    );
                  })}
                </div>
              ) : (
                <div className="text-center py-8 text-gray-400">
                  Click "Refresh Status" to check API health
                </div>
              )}
            </div>

            {/* Upload Panel */}
            <div className="bg-white rounded-lg shadow p-6">
              <h2 className="text-xl font-semibold mb-4 flex items-center gap-2">
                <Upload className="w-5 h-5" />
                Upload PDF
              </h2>
              <div className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Select PDF File
                  </label>
                  <input
                    type="file"
                    accept=".pdf"
                    onChange={(e) => setUploadFile(e.target.files?.[0] || null)}
                    className="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">
                    Project ID
                  </label>
                  <input
                    type="text"
                    value={projectId}
                    onChange={(e) => setProjectId(e.target.value)}
                    placeholder="e.g., windsor_1032_california"
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                  <p className="text-xs text-gray-500 mt-1">
                    Use format: windsor_[number]_[street_name]
                  </p>
                </div>
                <button
                  onClick={handleUpload}
                  disabled={!uploadFile || uploading}
                  className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 disabled:opacity-50 disabled:cursor-not-allowed transition font-semibold"
                >
                  {uploading ? (
                    <>
                      <RefreshCw className="w-5 h-5 animate-spin" />
                      Uploading...
                    </>
                  ) : (
                    <>
                      <Upload className="w-5 h-5" />
                      Upload & Ingest
                    </>
                  )}
                </button>
              </div>
            </div>
          </div>

          {/* Ingestion Progress Panel */}
          {activeJobs.length > 0 && (
            <div className="mt-6 bg-white rounded-lg shadow p-6">
              <div className="flex items-center justify-between mb-4">
                <h2 className="text-xl font-semibold flex items-center gap-2">
                  <MessageSquare className="w-5 h-5" />
                  Ingestion Progress
                </h2>
                {activeJobs.some(job => job.status === "completed" || job.status === "failed") && (
                  <button
                    onClick={clearCompletedJobs}
                    className="text-sm text-gray-500 hover:text-gray-700 underline"
                  >
                    Clear Completed
                  </button>
                )}
              </div>
              <div className="space-y-4">
                {activeJobs.map((job) => (
                  <div key={job.job_id} className="border border-gray-200 rounded-lg p-4">
                    <div className="flex items-center justify-between mb-2">
                      <div className="flex items-center gap-3">
                        <span className="font-medium text-gray-900">{job.filename}</span>
                        {job.status === "completed" && (
                          <CheckCircle className="w-5 h-5 text-green-500" />
                        )}
                        {job.status === "failed" && (
                          <XCircle className="w-5 h-5 text-red-500" />
                        )}
                        {(job.status === "pending" || job.status === "processing") && (
                          <RefreshCw className="w-5 h-5 text-blue-500 animate-spin" />
                        )}
                      </div>
                      <span className="text-sm text-gray-500 capitalize">{job.status}</span>
                    </div>
                    <div className="mb-2">
                      <div className="w-full bg-gray-200 rounded-full h-2">
                        <div
                          className="bg-blue-500 h-2 rounded-full transition-all duration-300"
                          style={{ width: `${job.progress * 100}%` }}
                        />
                      </div>
                    </div>
                    <div className="flex items-center justify-between text-sm">
                      <span className="text-gray-600">{job.message}</span>
                      <span className="text-gray-500">{Math.round(job.progress * 100)}%</span>
                    </div>
                    {job.project_id && (
                      <div className="mt-2 text-xs text-gray-500">
                        Project: <span className="font-mono">{job.project_id}</span>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Document Management Panel */}
          <div className="mt-6 bg-white rounded-lg shadow p-6">
            <div className="flex items-center justify-between mb-4">
              <h2 className="text-xl font-semibold flex items-center gap-2">
                <FileText className="w-5 h-5" />
                Ingested Documents
              </h2>
              <button
                onClick={loadDocuments}
                disabled={loadingDocuments}
                className="flex items-center gap-2 px-3 py-1.5 text-sm bg-gray-100 hover:bg-gray-200 rounded-lg transition disabled:opacity-50"
              >
                <RefreshCw className={`w-4 h-4 ${loadingDocuments ? "animate-spin" : ""}`} />
                Refresh
              </button>
            </div>
            
            {loadingDocuments ? (
              <div className="text-center py-8 text-gray-400">
                <RefreshCw className="w-8 h-8 mx-auto mb-2 animate-spin" />
                <p>Loading documents...</p>
              </div>
            ) : documents.length === 0 ? (
              <div className="text-center py-8 text-gray-400">
                <FileText className="w-12 h-12 mx-auto mb-2 text-gray-300" />
                <p>No documents ingested yet</p>
                <p className="text-sm mt-1">Upload a PDF to get started</p>
              </div>
            ) : (
              <div className="overflow-x-auto">
                <table className="w-full">
                  <thead>
                    <tr className="border-b text-left">
                      <th className="pb-3 text-sm font-semibold text-gray-700">Document</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700">Project</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700 text-center">Pages</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700 text-center">Visual</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700 text-center">Tables</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700 text-center">Chunks</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700">Uploaded</th>
                      <th className="pb-3 text-sm font-semibold text-gray-700 text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {documents.map((doc) => (
                      <tr key={doc.doc_id} className="border-b hover:bg-gray-50">
                        <td className="py-3">
                          <div className="flex items-center gap-2">
                            <FileText className="w-4 h-4 text-blue-500" />
                            <span className="font-medium text-gray-900">{doc.title}</span>
                          </div>
                          <div className="text-xs text-gray-500 font-mono mt-1">{doc.doc_id}</div>
                        </td>
                        <td className="py-3 text-sm text-gray-600">
                          {doc.project_id.replace(/_/g, " ")}
                        </td>
                        <td className="py-3 text-sm text-gray-600 text-center">{doc.page_count}</td>
                        <td className="py-3 text-sm text-gray-600 text-center">{doc.visual_count}</td>
                        <td className="py-3 text-sm text-gray-600 text-center">{doc.table_count}</td>
                        <td className="py-3 text-sm text-gray-600 text-center">{doc.chunk_count}</td>
                        <td className="py-3 text-sm text-gray-600">
                          {new Date(doc.created_at).toLocaleDateString()} {new Date(doc.created_at).toLocaleTimeString()}
                        </td>
                        <td className="py-3 text-center">
                          <button
                            onClick={() => handleDeleteDocument(doc.doc_id, doc.title)}
                            className="inline-flex items-center gap-1 px-3 py-1.5 text-sm text-red-600 hover:bg-red-50 rounded-lg transition"
                            title="Delete document"
                          >
                            <Trash2 className="w-4 h-4" />
                            Delete
                          </button>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}
          </div>
        </div>
      </div>
    </LoadingWrapper>
  );
}
